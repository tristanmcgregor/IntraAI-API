APP_NAME=allmac-rag
UPLOAD_DIRECTORY=documents
SQLITE_PATH=storage/index.db

# Required for embeddings & answers
OPENAI_API_KEY=sk-...
OPENAI_EMBEDDINGS_MODEL=text-embedding-3-small
OPENAI_CHAT_MODEL=gpt-4o-mini

# Chunking & retrieval
CHUNK_SIZE=1200
CHUNK_OVERLAP=150
TOP_K=5
COMPANY_ONLY_MODE=false
MIN_RELEVANCE=0.25

# Optional: use SQS + worker instead of inline embeddings
AWS_REGION=us-east-1
SQS_QUEUE_URL=https://sqs.us-east-1.amazonaws.com/123456789012/intraai-embed-queue

# Security
ALLOWED_ORIGINS=https://app.intraai.com,https://www.intraai.com
ALLOW_FILE_ORIGIN=false
API_KEY=change-me
ALLOWED_FILE_EXTENSIONS=.pdf,.docx,.pptx,.txt,.md,.html,.htm
MAX_UPLOAD_MB=10 

# Storage (optional S3)
S3_BUCKET_NAME=
S3_PREFIX=uploads/
S3_ENDPOINT_URL= 

# Contact email (Resend)
RESEND_API_KEY=re_...
EMAIL_FROM=IntraAI <noreply@yourdomain.com>
EMAIL_TO=you@yourdomain.com 